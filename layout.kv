<Main>:

    MDFlatButton:
        text: root.default_text
        pos: 300, 300

#=== MENU ===>

    BoxLayout:
        MDBottomAppBar:
            MDActionBottomAppBarButton:
                icon: "chart-line"
                pos_hint: {"x": 0.1, "y": 0.2}

            MDActionBottomAppBarButton:
                icon: "handshake"
                pos_hint: {"x": 0.45, "y": 0.2}
                on_release: app.change_screen("Deals")

            MDActionBottomAppBarButton:
                icon: "account"
                pos_hint: {"x": 0.8, "y": 0.2}
                on_release: app.change_screen("Account")

#=== END MENU ===>

<Deals>:
    MDLabel:
        text: "Ваши сделки"
        pos_hint: {"x": 0.02, "y": 0.44}
        font_size: "22sp"


    MDIconButton:
        icon: "plus"
        theme_text_color: "Custom"
        text_color: 0,0,0,1
        pos_hint: {"x": 0.85, "y": 0.9}
        icon_size: "32sp"
        on_release: app.change_screen("CreateDeal")

    MDIconButton:
        icon: "refresh"
        theme_text_color: "Custom"
        text_color: 0,0,0,1
        pos_hint: {"x": 0.75, "y": 0.9}
        icon_size: "32sp"
        on_release: root.show_deals()

    MDScrollView:
        orientation: "vertical"
        size_hint: (0.99, 0.7)
        pos_hint: {"x": 0.01, "y": 0.2}

        MDList:
            id: dealsContainer
            ThreeLineListItem:
                MDLabel:
                    text:"123"


#=== MENU ===>

    MDBottomAppBar:
        MDActionBottomAppBarButton:
            icon: "chart-line"
            pos_hint: {"x": 0.1, "y": 0.2}
            on_release: app.change_screen("Main")

        MDActionBottomAppBarButton:
            icon: "handshake"
            pos_hint: {"x": 0.45, "y": 0.2}

        MDActionBottomAppBarButton:
            pos_hint: {"x": 0.8, "y": 0.2}
            icon: "account"
            on_release: app.change_screen("Account")

#=== END MENU ===>


<Account>:
    BoxLayout:
        MDIconButton:
            icon: "account"
            theme_text_color: "Custom"
            text_color: 0,0,0,1
            pos_hint: {"x": 0.8, "y": 0.85}
            icon_size: "32sp"

        MDLabel:
            text: root.getUserName()
            pos_hint: {"x": 0.8, "y": 0.4}
            font_size: "32sp"

#=== Stock Market ===>

    MDLabel:
        text: "Биржа:"
        padding: 15
        pos_hint: {"center_x": .5, "center_y":.8}

    MDRaisedButton:
        id: stockButton
        text: root.getCurrentStock()
        pos_hint: {"center_x": .3, "center_y":.8}
        on_release: root.open_stocks()

#=== End Stock Market ===>

#=== DEPOSIT ===>

    MDLabel:
        text: root.getCurrentDeposit()
        padding: 15
        pos_hint: {"center_x": .5, "center_y": .7}

#=== END DEPOSIT ===>

#=== Percentage Of Risk Of Deposit ===>

    MDLabel:
        text: root.getCurrentPercentageOfRiskOfDeposit()
        padding: 15
        pos_hint: {"center_x": .5, "center_y": .6}

#=== End Percentage Of Risk Of Deposit ===>

#=== SMART STOP ===>

    MDLabel:
        text: root.getCurrentSmartStopPercentage()
        padding: 15
        pos_hint: {"center_x": .5, "center_y": .5}

#=== END SMART STOP ===>

#=== Change Properties ===>

    MDRaisedButton:
        text: "Поменять значения"
        size_hint: (0.9, 0.1)
        pos_hint: {"center_x": .5, "center_y":.2}
        on_release: app.change_screen("ChangeDefaultSettings")

#=== End Change Properties ===>

#=== MENU ===>
    BoxLayout:
        orientation: "vertical"

        MDBottomAppBar:
            MDActionBottomAppBarButton:
                icon: "chart-line"
                pos_hint: {"x": 0.1, "y": 0.2}
                on_release: app.change_screen("Main")

            MDActionBottomAppBarButton:
                icon: "handshake"
                pos_hint: {"x": 0.45, "y": 0.2}
                on_release: app.change_screen("Deals")

            MDActionBottomAppBarButton:
                icon: "account"
                pos_hint: {"x": 0.8, "y": 0.2}
#=== END MENU ===>

#=== CHANGE DEFAULT SETTINGS ===>
<ChangeDefaultSettings>:
    MDLabel:
        text: "Поменять параметры"
        pos_hint: {"center_x": 0.525, "center_y":.9}

    MDLabel:
        text: "Депозит: "
        pos_hint: {"center_x": 0.525, "center_y":.8}

    MDTextField:
        id: deposit
        size_hint: (0.5, 0.1)
        pos_hint: {"center_x": 0.45, "center_y":.8}
        hint_text: root.getCurrentDeposit()
        helper_text_mode: "on_focus"

    MDLabel:
        text: "Процент риска по депозиту: "
        pos_hint: {"center_x": 0.525, "center_y":.7}

    MDTextField:
        id: percentageOfRiskOfDeposit
        size_hint: (0.4, 0.1)
        pos_hint: {"center_x": 0.7, "center_y":.7}
        hint_text: root.getCurrentPercentageOfRiskOfDeposit()
        helper_text_mode: "on_focus"

    MDLabel:
        text: "Смарт стоп: "
        pos_hint: {"center_x": 0.525, "center_y":.6}

    MDTextField:
        id: smartStopPercentage
        size_hint: (0.5, 0.1)
        pos_hint: {"center_x": 0.5, "center_y":.6}
        hint_text: root.getCurrentSmartStopPercentage()
        helper_text_mode: "on_focus"

    MDRaisedButton:
        text: "Применить"
        size_hint: (0.95, 0.09)
        pos_hint: {"center_x": 0.5, "center_y":0.2}
        on_release: root.changeProperties()

    MDRaisedButton:
        text: "Назад"
        size_hint: (0.95, 0.09)
        pos_hint: {"center_x": 0.5, "center_y":0.1}
        on_release: app.change_screen("Account")

#=== END CHANGE DEFAULT SETTINGS ===>

#=== CREATE DEAL ===>
<CreateDeal>:

    MDLabel:
        text: "Создать сделку"
        pos_hint: {"x": 0.02, "y": 0.44}
        font_size: "22sp"


    MDLabel:
        text: "Тикер:"
        pos_hint: {"x": .02, "y":.35}

    MDRaisedButton:
        id: ticketButton
        text: "BTC"
        pos_hint: {"x": .14, "y":.82}
        on_release: root.openTickets()

    MDLabel:
        text: "Депозит: "
        pos_hint: {"x": .3, "y":.35}

    MDTextField:
        id: deposit
        size_hint: (0.4, 0.1)
        pos_hint: {"x": 0.45, "y":.8}
        hint_text: "$"
        helper_text_mode: "on_focus"
        on_text: root.print_deposit(self.text)

    MDLabel:
        text: "Процент риска: "
        pos_hint: {"x": .02, "y":.25}

    MDTextField:
        id: percentageOfRisk
        size_hint: (0.25, 0.1)
        pos_hint: {"x": 0.3, "y":.7}
        hint_text: "----"
        helper_text_mode: "on_focus"
        on_text: root.print_percentage_of_risk(self.text)


    MDLabel:
        id: dateLabel
        text: "Дата: "
        pos_hint: {"x": .6, "y":.25}

    MDRaisedButton:
        id: dateButton
        pos_hint: {'x': .75, "y": .72}
        size_hint_x: .2
        on_release: root.show_date_picker()


    MDLabel:
        text: "Цена входа: "
        pos_hint: {"x": .02, "y":.15}

    MDTextField:
        id: entryPrice
        size_hint: (0.5, 0.1)
        pos_hint: {"x": 0.3, "y":.6}
        hint_text: "Введите что нибудь..."
        helper_text_mode: "on_focus"

    MDLabel:
        text: "Цена стопа: "
        pos_hint: {"center_x": 0.525, "center_y":.57}

    MDTextField:
        id: stopPrice
        size_hint: (0.5, 0.1)
        pos_hint: {"center_x": 0.55, "center_y":.57}
        hint_text: "Введите что нибудь..."
        helper_text_mode: "on_focus"

    MDLabel:
        text: "Размер стопа: "
        pos_hint: {"center_x": 0.525, "center_y":.48}

    MDTextField:
        id: stopPriceAmount
        size_hint: (0.5, 0.1)
        pos_hint: {"center_x": 0.55, "center_y":.48}
        hint_text: "Введите что нибудь..."
        helper_text_mode: "on_focus"

    MDLabel:
        text: "Цена выхода: "
        pos_hint: {"center_x": 0.525, "center_y":.39}

    MDTextField:
        id: stopInUsdt
        size_hint: (0.5, 0.1)
        pos_hint: {"center_x": 0.55, "center_y":.39}
        hint_text: "Введите что нибудь..."
        helper_text_mode: "on_focus"

    MDLabel:
        text: "Заметка: "
        pos_hint: {"center_x": 0.525, "center_y":.3}

    MDTextField:
        id: notion
        size_hint: (0.5, 0.1)
        pos_hint: {"center_x": 0.55, "center_y":.3}
        hint_text: "Введите что нибудь..."
        helper_text_mode: "on_focus"

    MDRaisedButton:
        text: "Создать"
        size_hint: (0.95, 0.08)
        pos_hint: {"center_x": 0.5, "center_y":0.15}
        on_release: root.create_deal()

    MDRaisedButton:
        text: "Назад"
        size_hint: (0.95, 0.08)
        pos_hint: {"center_x": 0.5, "center_y":0.05}
        on_release: app.change_screen("Deals")

#=== END CREATE DEAL ===>
